{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "erasableSyntaxOnly": true,
    "paths": {
      "@/*": ["./node_modules/@marimo-team/frontend/src/*"]
    },
    "plugins": [{ "name": "@effect/language-service" }]
  }
}
