{
  "name": "marimo",
  "displayName": "marimo",
  "description": "A marimo notebook extension for VS Code.",
  "version": "0.1.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "publisher": "manzt",
  "repository": "https://github.com/manzt/marimo-lsp",
  "categories": [
    "Notebooks",
    "Data Science"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Marimo",
      "properties": {}
    },
    "notebooks": [
      {
        "type": "marimo-lsp-notebook",
        "displayName": "marimo Notebook",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*_mo.py"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "marimo-renderer",
        "displayName": "Marimo Output Renderer",
        "entrypoint": "./dist/renderer.js",
        "mimeTypes": [
          "application/vnd.marimo.ui+json"
        ],
        "requiresMessaging": "always"
      }
    ],
    "commands": [
      {
        "command": "marimo-lsp.newMarimoNotebook",
        "title": "New marimo notebook",
        "shortTitle": "Marimo notebook",
        "category": "Create"
      },
      {
        "command": "marimo-lsp.showSessionInfo",
        "title": "Show Session Info",
        "category": "Marimo"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "marimo-lsp.newMarimoNotebook",
          "group": "notebook"
        }
      ]
    }
  },
  "scripts": {
    "build": "pnpm build-extension && pnpm build-renderer",
    "build-extension": "esbuild --format=cjs --platform=node --minify --external:vscode --bundle --sourcemap src/extension.ts --outdir=dist",
    "build-renderer": "esbuild --format=esm --bundle --minify --sourcemap src/renderer.tsx --outdir=dist"
  },
  "devDependencies": {
    "@marimo-team/marimo-api": "link:../../marimo/packages/openapi/",
    "@types/node": "^22.13.10",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.86.0",
    "@types/vscode-notebook-renderer": "^1.72.3",
    "effect": "^3.16.12",
    "esbuild": "^0.25.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vscode-languageclient": "^9.0.1",
    "zod": "^3.25.67"
  }
}
