{
  "name": "marimo",
  "displayName": "marimo",
  "description": "A marimo notebook extension for VS Code.",
  "version": "0.1.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "publisher": "manzt",
  "repository": "https://github.com/manzt/marimo-lsp",
  "categories": [
    "Notebooks",
    "Data Science"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Marimo",
      "properties": {}
    },
    "notebooks": [
      {
        "type": "marimo-lsp-notebook",
        "displayName": "marimo Notebook",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*_mo.py"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "marimo-lsp.newMarimoNotebook",
        "title": "New marimo notebook",
        "shortTitle": "Marimo notebook",
        "category": "Create"
      },
      {
        "command": "marimo-lsp.showSessionInfo",
        "title": "Show Session Info",
        "category": "Marimo"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "marimo-lsp.newMarimoNotebook",
          "group": "notebook"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild --format=cjs --platform=node --external:vscode --bundle --sourcemap src/extension.ts --outdir=dist"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/vscode": "^1.86.0",
    "esbuild": "^0.25.5",
    "typescript": "^5.8.2"
  }
}
